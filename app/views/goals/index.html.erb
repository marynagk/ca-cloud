<h1>Listing goals</h1>

<table>
  <tr>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @goals.each do |goal| %>
  <tr>
    <td><%= goal.description %></td>
    <td><%= link_to 'Show', [goal.user, goal] %></td>
    <td><%= link_to 'Edit', edit_user_goal_path(goal.user, goal) %></td>
    <td><%= link_to 'Destroy', [goal.user, goal], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

